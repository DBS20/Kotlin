<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txt_Titulo"
        android:layout_width="193dp"
        android:layout_height="41dp"
        android:text="BEBIDAS"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.066" />

    <TextView
        android:id="@+id/txt_Informacio"
        android:layout_width="216dp"
        android:layout_height="165dp"
        android:fontFamily="sans-serif-black"
        android:text="TextViewssd vs vk vjd v djkv "
        app:layout_constraintBottom_toTopOf="@+id/btn_Bebida"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Titulo" />

    <Button
        android:id="@+id/btn_Bebida"
        android:layout_width="119dp"
        android:layout_height="50dp"
        android:layout_marginStart="113dp"
        android:layout_marginTop="212dp"
        android:layout_marginEnd="23dp"
        android:text="Bebida"
        app:layout_constraintEnd_toStartOf="@+id/btn_Siguiente"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_Anterior"
        app:layout_constraintTop_toBottomOf="@+id/txt_Titulo" />

    <Button
        android:id="@+id/btn_Anterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Preview"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Bebida"
        app:layout_constraintEnd_toEndOf="@+id/txt_Informacio"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Informacio" />

    <Button
        android:id="@+id/btn_Siguiente"
        android:layout_width="109dp"
        android:layout_height="47dp"
        android:layout_marginTop="24dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Anterior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.898"
        app:layout_constraintStart_toEndOf="@+id/btn_Anterior"
        app:layout_constraintTop_toBottomOf="@+id/txt_Informacio" />

    <Button
        android:id="@+id/btn_Tipo"
        android:layout_width="100dp"
        android:layout_height="51dp"
        android:text="Tipo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btn_Bebida"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Anterior"
        app:layout_constraintVertical_bias="0.036" />

    <Button
        android:id="@+id/btn_Paquete"
        android:layout_width="109dp"
        android:layout_height="51dp"
        android:text="Â¿Combo?"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.906"
        app:layout_constraintStart_toStartOf="@+id/btn_Bebida"
        app:layout_constraintTop_toBottomOf="@+id/btn_Siguiente"
        app:layout_constraintVertical_bias="0.038" />

</androidx.constraintlayout.widget.ConstraintLayout>